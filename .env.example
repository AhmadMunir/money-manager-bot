# MonMan Finance Bot Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (Required)
# Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Admin Telegram ID (Required) 
# Get your Telegram ID from @userinfobot
ADMIN_ID=your_telegram_id_here

# Database Configuration
# SQLite (default): sqlite:///monman.db
# PostgreSQL: postgresql://user:password@localhost/monman
# MySQL: mysql://user:password@localhost/monman
DATABASE_URL=sqlite:///monman.db

# Optional Settings
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Timezone (default: Asia/Jakarta)
TIMEZONE=Asia/Jakarta

# Currency format (default: IDR)
CURRENCY=IDR

# Optional: Set notification times (24-hour format)
DAILY_REPORT_TIME=08:00
WEEKLY_REPORT_DAY=1
MONTHLY_REPORT_DAY=1

# Debug mode
DEBUG=True
